<div class="anime-list">
    <h1 class="title">Currently Watching</h1>

    <h3 class="title" ng-if="watching.length == 0">You have no animes in this list yet...</h3>

    <div class="row-fluid">
        <div class="col-sm-6 col-md-4" ng-repeat="item in watching">
            <div class="thumbnail">
                <img ng-src="{{item.picture}}" class="pull-left">
                <div class="caption">
                    <h4 style=""><a href="/anime/{{item.id}}/{{item.name.split(' ').join('_')}}">{{item.name}}</a></h4>
                    <p>
                        OVA
                    </p>
                    <p>
                        <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>